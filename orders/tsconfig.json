{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist"
  },
  "lib": ["es2015"],
  "include": ["src/**/*", "../common/src/errors/forbidden-error.ts"],
  "exclude": ["node_modules", "dist"]
}
